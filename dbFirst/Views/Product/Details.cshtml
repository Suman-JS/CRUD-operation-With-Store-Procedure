@model dbFirst.Models.Product

@{
    ViewBag.Title = "Details";
}

@if (TempData["ErrorMsg"] != null)
{
    <div class="alert alert-danger">
        <strong>Info : </strong>
        @TempData["ErrorMsg"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span>&times;</span>
        </button>
    </div>
}
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
